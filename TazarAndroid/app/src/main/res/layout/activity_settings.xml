<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок Настройки API -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/api_settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <!-- Текущий URL API -->
        <TextView
            android:id="@+id/current_api_url_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_api_url"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp" />

        <!-- Ввод URL API -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/api_url"
            style="@style/TextInputLayout"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/api_url_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопки для управления URL API -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/save_api_url_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                style="@style/Button.Primary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/reset_api_url_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reset"
                style="@style/Button.Primary"
                android:backgroundTint="@color/accent" />

        </LinearLayout>

        <!-- Подсказка -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/api_url_help"
            android:textStyle="italic"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="24dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="24dp" />

        <!-- Заголовок Уведомления -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <!-- Настройки уведомлений -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/enable_notifications_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_notifications"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/enable_report_notifications_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_report_notifications"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/enable_achievement_notifications_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_achievement_notifications"
            android:checked="true"
            android:layout_marginBottom="24dp" />

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="24dp" />

        <!-- О приложении -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_app"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/version_info"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="24dp" />

        <!-- Кнопки для документации -->
        <Button
            android:id="@+id/privacy_policy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/primary"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/terms_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_service"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/primary"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView> 