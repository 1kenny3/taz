<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Комментируем MapView и заменяем на SupportMapFragment и контейнер -->
    <!--
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->
    <RelativeLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_zoom_in" />

    <ImageButton
        android:id="@+id/btn_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_zoom_out" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <!-- Панель фильтров -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/filtersCard"
        style="@style/Widget.Tazar.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        android:backgroundTint="?attr/colorSurfaceVariant"
        app:strokeWidth="0dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Фильтры"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/waste_type_filter_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_plastic"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пластик" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_paper"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Бумага" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_metal"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Металл" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_glass"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стекло" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_medical"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Медицинские" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_construction"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Строительные" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_agricultural"
                    style="@style/Widget.Tazar.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сельскохозяйственные" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Кнопка добавления отчета -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="@string/report_trash"
        style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white" />

    <!-- Легенда карты -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/legendCard"
        style="@style/Widget.Tazar.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Легенда"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Новые сообщения"
                        android:textAppearance="@style/TextAppearance.Tazar.Body2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_in_progress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="В обработке"
                        android:textAppearance="@style/TextAppearance.Tazar.Body2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_completed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Убрано"
                        android:textAppearance="@style/TextAppearance.Tazar.Body2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 