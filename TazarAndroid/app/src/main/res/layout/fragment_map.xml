<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:id="@+id/filter_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/waste_type_filter_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_plastic"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пластик"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_plastic"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_paper"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бумага"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_paper"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_metal"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Металл"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_metal"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_glass"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стекло"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_glass"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_medical"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Медицинские"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_medical"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_construction"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Строительные"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_construction"
                app:chipStrokeWidth="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_agricultural"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сельские"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/waste_agricultural"
                app:chipStrokeWidth="0dp"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:src="@drawable/ic_zoom_in"
        app:fabSize="mini"
        android:visibility="visible"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_zoom_out"
        app:fabSize="mini"
        android:visibility="visible"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_add"
        app:fabSize="normal"
        app:tint="@color/white"
        app:backgroundTint="@color/colorAccent"/>

</RelativeLayout> 