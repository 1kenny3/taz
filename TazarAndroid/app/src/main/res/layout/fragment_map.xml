<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Карта -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Панель поиска -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card"
        style="@style/Widget.Tazar.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Поиск и фильтры"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                <ImageView
                    android:id="@+id/search_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Tazar.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:startIconDrawable="@drawable/ic_search"
                    app:endIconMode="clear_text"
                    android:hint="Поиск пунктов сбора">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Чипы фильтров -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filter_chip_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:chipSpacingHorizontal="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_plastic"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Пластик"
                            android:tag="plastic"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_plastic"
                            app:chipIcon="@drawable/ic_plastic" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_paper"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Бумага"
                            android:tag="paper"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_paper"
                            app:chipIcon="@drawable/ic_paper" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_glass"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Стекло"
                            android:tag="glass"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_glass"
                            app:chipIcon="@drawable/ic_glass" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_metal"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Металл"
                            android:tag="metal"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_metal"
                            app:chipIcon="@drawable/ic_metal" />
                            
                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_medical"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Медицинские"
                            android:tag="medical"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_medical"
                            app:chipIcon="@drawable/ic_plastic" />
                            
                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_construction"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Строительные"
                            android:tag="construction"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_construction"
                            app:chipIcon="@drawable/ic_plastic" />
                            
                        <com.google.android.material.chip.Chip
                            android:id="@+id/filter_agricultural"
                            style="@style/Widget.Tazar.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Сельские"
                            android:tag="agricultural"
                            android:checkable="true"
                            app:chipBackgroundColor="@color/chip_background_agricultural"
                            app:chipIcon="@drawable/ic_plastic" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Кнопка определения местоположения -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_my_location"
        app:backgroundTint="@color/white"
        app:tint="@color/colorPrimary"
        app:borderWidth="0dp"
        app:elevation="6dp" />

    <!-- Bottom Sheet для деталей пункта сбора -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/point_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Tazar.Headline2" />

            <!-- Адрес -->
            <TextView
                android:id="@+id/point_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.Tazar.Body1" />

            <!-- Принимаемые типы отходов -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Принимаемые отходы"
                android:textAppearance="@style/TextAppearance.Tazar.Body1"
                android:textColor="@color/textColorPrimary" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/waste_types_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp" />

            <!-- Кнопка построения маршрута -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/route_button"
                style="@style/Widget.Tazar.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Построить маршрут" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Индикатор загрузки -->
    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:indicatorColor="@color/colorPrimary" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 