<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Белый фон карточки -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Левая цветная полоса -->
    <item android:left="0dp" android:right="16dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <size android:width="4dp" />
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp" />
        </shape>
    </item>
    
    <!-- Эффект нажатия -->
    <item android:drawable="@drawable/ripple_effect" />
</layer-list>
