<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения -->
    <style name="Theme.TazarAndroid" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="chipStyle">@style/Widget.Tazar.Chip</item>
        <item name="buttonStyle">@style/Widget.Tazar.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Tazar.CardView</item>
        <item name="bottomNavigationStyle">@style/Widget.Tazar.BottomNavigation</item>
        <item name="textInputStyle">@style/Widget.Tazar.TextInputLayout</item>
    </style>

    <!-- Тема для экрана загрузки -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Тема без заголовка -->
    <style name="Theme.TazarAndroid.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Стиль для основных кнопок -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Стиль для полей ввода -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <!-- Стиль для карточек -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Базовые стили текста -->
    <style name="TextAppearance.Tazar.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Tazar.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Tazar.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Tazar.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Стили кнопок -->
    <style name="Widget.Tazar.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>

    <style name="Widget.Tazar.Button.Secondary" parent="Widget.Tazar.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.Tazar.Button.FilledTonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Стили карточек -->
    <style name="Widget.Tazar.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">20dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Стили полей ввода -->
    <style name="Widget.Tazar.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="endIconTint">@color/primary</item>
        <item name="startIconTint">@color/primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <!-- Стили чипов -->
    <style name="Widget.Tazar.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/colorSurfaceVariant</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.Tazar.Chip.Selected" parent="Widget.Tazar.Chip">
        <item name="chipBackgroundColor">@color/colorSecondaryContainer</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <!-- Стили для Bottom Navigation -->
    <style name="Widget.Tazar.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/colorSecondary</item>
        <item name="itemTextColor">@color/colorSecondary</item>
        <item name="itemRippleColor">@color/ripple_color</item>
        <item name="elevation">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingTop">12dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
    </style>

    <!-- Стили для Toolbar -->
    <style name="Widget.Tazar.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.Tazar.Toolbar.Title</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextAppearance.Tazar.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Tazar.Toolbar.Title.Center">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Стили для диалогов -->
    <style name="ThemeOverlay.Tazar.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:windowElevation">8dp</item>
    </style>

    <!-- Стили для списков -->
    <style name="Widget.Tazar.RecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <!-- Стили для изображений -->
    <style name="Widget.Tazar.ImageView.Round" parent="Widget.AppCompat.ImageButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorSurfaceVariant</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Стиль для элементов бокового меню -->
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/drawer_item_color</item>
        <item name="android:background">@drawable/drawer_item_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Стиль для заголовков в боковом меню -->
    <style name="NavigationDrawerHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/drawer_header</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Стиль для номеров пунктов в боковом меню -->
    <style name="NavigationDrawerNumber">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/drawer_number</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Стиль для разделителей в боковом меню -->
    <style name="NavigationDrawerDivider">
        <item name="android:background">@color/drawer_divider</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:height">1dp</item>
    </style>

    <!-- Стили для экрана профиля -->
    <style name="Profile">
        <item name="android:background">@color/profile_background</item>
    </style>

    <!-- Заголовки в профиле -->
    <style name="Profile.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_header</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Подзаголовки в профиле -->
    <style name="Profile.Subheader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_header</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Метки полей в профиле -->
    <style name="Profile.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_text</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Значения полей в профиле -->
    <style name="Profile.Value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/profile_field_text</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Кнопки в профиле -->
    <style name="Profile.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/profile_nav_text</item>
        <item name="backgroundTint">@color/profile_button</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Кнопка выхода в профиле -->
    <style name="Profile.Button.Warning">
        <item name="backgroundTint">@color/profile_warning</item>
    </style>

    <!-- Разделители в профиле -->
    <style name="Profile.Divider">
        <item name="android:background">@color/profile_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Чекбоксы в профиле -->
    <style name="Profile.Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/profile_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="buttonTint">@color/profile_checkbox_tint</item>
    </style>

    <!-- Аватар в профиле -->
    <style name="Profile.Avatar">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/profile_avatar_background</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources> 